{% extends 'dashboard.html.twig' %}


{% block body %}
<body>
<div class="container-xl">
	<div class="table-responsive">
		<div class="table-wrapper">
			<div class="table-title">
				<div class="row">
                
					<div class="col-sm-6">
						<h2>Admin <b>Dashborad</b></h2>

					</div>
					<div class="col-sm-6">
						<a href="{{ url("create_event") }}" class="btn btn-success" ><i class="material-icons">&#xE147;</i> <span>Add New </span></a>
					</div>
				</div>
			</div>
            {% for message in app.flashes('success')  %}
                <div class="alert alert-success">
                {{message}}
                </div>
            {% endfor %}
			<table class="table table-striped table-hover">
				<thead>
					<tr>
						
						<th>Image événement</th>
						<th>Nom événement</th>
						<th>Détail événement</th>
						
					</tr>
				</thead>
				<tbody>
{% for e in events %}
					<tr>
						
						<td><img width="150" height="100" src="{{ asset('assets/images/slider/'~ e.img)}}" alt="blog image"></td>
						<td>{{e.nom}}</td>
						<td style="width:500px">{{e.detail}}</td>
						
						<td>
							<a href="{{url("update_event",{"id": e.id})}}" ><i class="material-icons" data-toggle="tooltip" title="Edit">&#xE254;</i></a>
							<a href=" {{url("delete_event",{"id": e.id})}}" class="delete" onclick="return confirme()"><i class="material-icons" data-toggle="tooltip" title="Delete">&#xE872;</i></a>
							<a href=" {{url("Voir_salles",{"id": e.id})}}" ><h5>Voir les salles</h5></a>
						</td>
					</tr>
{% endfor %}					
				</tbody>
			</table>
			
		</div>
	</div>        
</div>


</body>
<script type="text/javascript">
  function confirme( ){
if( confirm( "Voulez vous vraiment supprimer cette évenement ?" )){
}
else{alert("Opération annuler");
             return false;}
}
</script>



{% endblock body %}